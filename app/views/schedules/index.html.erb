<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<br>
<div class='table-responsive'>
<table class='table table-striped'>
  <thead>
    <tr>
      <th>Date open</th>
      <th>Date close</th>
      <th colspan="3" style="width:10%"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.date_open %></td>
        <td><%= schedule.date_close %></td>
        <td><%= link_to 'Show', schedule, class:'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule), class:'btn btn-secondary' %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Schedule', new_schedule_path, class:'btn btn-primary' %>
